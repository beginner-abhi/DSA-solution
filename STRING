package stringBase;

public class ReverseWord {
	public static void main(String [] args) {
		String s="The Great India";
		//StringBuilder works by maintaining a buffer of char that will form the final String.
		//char can be appended,removed & manipulated via the StringBuilder
		StringBuilder s1=new StringBuilder();
		s1.append(s);
		s1.reverse();
		
		System.out.println(s1);}
	}
